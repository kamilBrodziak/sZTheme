{% extends "base.twig" %}
{% block content %}
    <article id="frontPageArticle">
        <div id="frontPagePictureContainer">
            <img id="frontPagePicture" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" height="{{ post.thumbnail.height }}" width="{{ post.thumbnail.width }}">
        </div>
        <div id="frontPageContentContainer">
            <header id="frontPageHeader">
                <h1 id="frontPageTitle">{{ post.title }}</h1>
            </header>
            <section id="frontPageContent">{{post.content}}</section>
            <footer id="frontPageFooter" class="buttonGradient goldCustomBorder">
                <a href="{{site.url}}/zacznij-tutaj" id="frontPageFirstArticleAnchor">Zacznij tutaj</a>
            </footer>
        </div>
    </article>
{% endblock %}