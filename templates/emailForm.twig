<form class="contactForm" name="contactForm" method="post" action="">
{#    <label for="contactFormFirstName">Twoje imię *</label>#}
    <input type="text" name="contactFormFirstName" pattern="[a-zA-Z0-9 ]+" maxlength="50"
            placeholder="Twoje imię" required>
{#    value="{{ fn('insertValueIntoInput', 'contactFormFirstName') }}"#}
