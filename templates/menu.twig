{% if menu %}
	<ul {% if menuLocation %} id="{{ menuLocation }}NavbarList" {% endif %}>
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }} {% if menuLocation %}{{ menuLocation }}NavbarListItem{% endif %}{% if item.title == 'Sklep' and navShopItemAnimation != 'disabled' %} hdrNavbarShopItem {{ navShopItemAnimation }}{% endif %}">
				<a target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
				{% if item.title == 'Sklep' %}
					<div id="shopPreview">
						{% for post in fn('getWCProducts') %}
							{% include ["partials/tease-product.twig"] %}
						{% endfor %}
					</div>
				{% endif %}
				{% if item.title == "Sklep" and navShopItemAnimation == 'snakeAnimationButton' %}
					<div class="leftButtonAnimation"></div>
					<div class="rightButtonAnimation"></div>
					<div class="topButtonAnimation"></div>
					<div class="bottomButtonAnimation"></div>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endif %}
