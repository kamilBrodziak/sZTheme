{% extends "base.twig" %}

{% block content %}
    <div class="contentWrapper" class="articleContentWrapper">
        <article class="postType{{function('ucwords',post.post_type)}}" id="post-{{post.ID}}">
            <section id="articleContent">
                <h1 id="pageTitle">{{post.title}}</h1>
                <div class="articleBody">
                    {{post.content}}
                </div>
            </section>
        </article>
    </div><!-- /content-wrapper -->
{% endblock %}